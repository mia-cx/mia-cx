{
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"pluginSearchDirs": ["."],
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"tabWidth": 2
			}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"tabWidth": 4
			}
		}
	]
}
