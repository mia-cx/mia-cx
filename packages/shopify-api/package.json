{
  "version": "0.0.0",
  "private": true,
  "description": "Mono-repo for @mia-cx/shopify-api",
  "repository": "https://github.com/mia-cx/shopify-api",
  "license": "MIT",
  "author": "mia-cx",
  "scripts": {
    "build": "turbo run build",
    "format": "prettier --write . && turbo run format",
    "format:root": "prettier --write .",
    "lint": "prettier --check . && eslint . && turbo run lint",
    "lint:root": "prettier --check . && eslint .",
    "prepare": "husky install",
    "sort": "sort-package-json **/package.json !**/node_modules/**",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@shapi/eslint-config": "workspace:^",
    "@shapi/prettier-config": "workspace:^",
    "@shapi/tsconfig": "workspace:^",
    "eslint": "^8.53.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.3",
    "sort-package-json": "^2.6.0",
    "turbo": "^1.10.16"
  },
  "packageManager": "pnpm@8.10.2"
}
